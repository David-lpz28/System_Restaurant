generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model Client {
  id        String  @id @default(cuid())
  firstName String
  lastName  String
  phone     String?
  address   String
  orders    Order[] @relation("ClientOrders") // Define the relation name
}

model Restaurant {
  id      String  @id @default(cuid())
  name    String
  phone   String?
  address String
  orders  Order[] // Relation with orders
}

model Order {
  id              String      @id @default(cuid())
  clientId        String
  restaurantId    String
  createdAt       DateTime    @default(now())
  completedAt     DateTime?   
  status          OrderStatus @default(PENDING)
  items           Item[]
  client          Client      @relation(fields: [clientId], references: [id], name: "ClientOrders")
  restaurant      Restaurant  @relation(fields: [restaurantId], references: [id])
}


model Item {
  id          String @id @default(cuid())
  orderId     String
  quantity    Int
  description String
  unitPrice   Float
  order       Order  @relation(fields: [orderId], references: [id]) // Relation with Order
}
